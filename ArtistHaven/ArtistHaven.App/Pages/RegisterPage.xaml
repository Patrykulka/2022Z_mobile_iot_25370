<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtistHaven.App.Pages.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout VerticalOptions="Center">
        <Label Text="E-Mail" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Border>
            <Entry x:Name="EMailEntry"/>
        </Border>
        <Label Text="Username" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Border>
            <Entry x:Name="UserNameEntry"/>
        </Border>
        <Label Text="Password" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Border>
            <Entry x:Name="PasswordEntry" IsPassword="True"/>
        </Border>
        <Label Text="Confirm Password" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Border>
            <Entry x:Name="ConfirmPasswordEntry" IsPassword="True"/>
        </Border>
        <Border>
            <Button x:Name="RegisterButton" Text="Register" Clicked="RegisterButtonClicked"/>
        </Border>
    </VerticalStackLayout>
</ContentPage>